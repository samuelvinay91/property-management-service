{
  "version": "1.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*",
    "backend/*",
    "frontend",
    "mobile",
    "ai-services"
  ],
  "useNx": true,
  "useWorkspaces": true
}