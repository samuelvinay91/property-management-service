{
  "name": "propflow-backend",
  "version": "1.0.0",
  "description": "PropFlow backend microservices",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.json src/**/*.yaml dist/",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:auth": "cd auth-service && npm run dev",
    "dev:property": "cd property-service && npm run dev",
    "dev:tenant": "cd tenant-service && npm run dev",
    "dev:payment": "cd payment-service && npm run dev",
    "dev:notification": "cd notification-service && npm run dev",
    "dev:maintenance": "cd maintenance-service && npm run dev",
    "dev:booking": "cd booking-service && npm run dev",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "npm run migrate:auth && npm run migrate:property && npm run migrate:tenant && npm run migrate:payment && npm run migrate:maintenance && npm run migrate:booking",
    "migrate:auth": "cd auth-service && npm run migrate",
    "migrate:property": "cd property-service && npm run migrate",
    "migrate:tenant": "cd tenant-service && npm run migrate",
    "migrate:payment": "cd payment-service && npm run migrate",
    "migrate:maintenance": "cd maintenance-service && npm run migrate",
    "migrate:booking": "cd booking-service && npm run migrate",
    "seed": "npm run seed:auth && npm run seed:property && npm run seed:tenant",
    "seed:auth": "cd auth-service && npm run seed",
    "seed:property": "cd property-service && npm run seed",
    "seed:tenant": "cd tenant-service && npm run seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "graphql-tools": "^9.0.0",
    "@apollo/gateway": "^2.5.1",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "stripe": "^13.3.0",
    "twilio": "^4.15.0",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.2",
    "amqplib": "^0.10.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "moment": "^2.29.4",
    "zod": "^3.22.2",
    "winston": "^3.10.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.0",
    "celebrate": "^15.0.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/multer": "^1.4.7",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0"
  }
}