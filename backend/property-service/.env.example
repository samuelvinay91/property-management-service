# Property Service Environment Configuration

# Server Configuration
PORT=4002
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/propflow_properties
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=propflow_properties

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads
AWS_S3_BUCKET=propflow-property-images
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Image Processing
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
IMAGE_QUALITY=80
THUMBNAIL_SIZES=150x150,300x300,600x400

# External APIs
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key
ZILLOW_API_KEY=your-zillow-api-key

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_NAME=properties

# GraphQL Federation
APOLLO_GRAPH_REF=propflow@current
APOLLO_KEY=your-apollo-studio-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9002

# Business Rules
MAX_PROPERTIES_PER_OWNER=50
MAX_IMAGES_PER_PROPERTY=20
MAX_DOCUMENTS_PER_PROPERTY=10
DOCUMENT_MAX_SIZE=52428800