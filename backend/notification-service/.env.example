# Environment Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=notification_service

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_EXTERNAL_URL=
LOG_EXTERNAL_HOST=
LOG_EXTERNAL_PORT=
LOG_EXTERNAL_PATH=

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@propflow.com
DEFAULT_FROM_NAME=PropFlow Notifications

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/service-account.json
FIREBASE_SERVICE_ACCOUNT_KEY=base64-encoded-service-account-json

# Apple Push Notification Service (APNS)
APNS_KEY_PATH=path/to/apns-key.p8
APNS_KEY=base64-encoded-apns-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.propflow.mobile

# OneSignal Configuration
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Webhook Configuration
WEBHOOK_SECRET_SENDGRID=your-sendgrid-webhook-secret
WEBHOOK_SECRET_TWILIO=your-twilio-webhook-secret

# Template Configuration
TEMPLATE_CACHE_TTL=300
TEMPLATE_COMPILE_CACHE_TTL=3600

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Notification Defaults
DEFAULT_RETRY_ATTEMPTS=3
DEFAULT_RETRY_DELAY_MS=5000
DEFAULT_BATCH_SIZE=100
DEFAULT_BATCH_DELAY_MS=1000

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Unsubscribe Configuration
UNSUBSCRIBE_BASE_URL=https://notifications.propflow.com

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_IN_APP_NOTIFICATIONS=true
ENABLE_TEMPLATE_CACHING=true
ENABLE_DELIVERY_TRACKING=true
ENABLE_WEBHOOK_VALIDATION=true

# Performance Configuration
MAX_CONCURRENT_DELIVERIES=50
DELIVERY_TIMEOUT_MS=30000
CONNECTION_POOL_SIZE=10

# Compliance Configuration
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true

# External Service URLs
USER_SERVICE_URL=http://localhost:3001
PROPERTY_SERVICE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:3003