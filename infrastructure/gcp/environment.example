# PropFlow - Google Cloud Run Environment Variables
# Copy this file to .env and update with your actual values

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1
ENVIRONMENT=production

# Database URLs (will be auto-generated by Cloud SQL)
AUTH_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_auth
PROPERTY_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_properties
TENANT_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_tenants
PAYMENT_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_payments
NOTIFICATION_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_notifications
MAINTENANCE_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_maintenance
BOOKING_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_bookings
AI_DATABASE_URL=postgresql://propflow:PASSWORD@DB_HOST:5432/propflow_ai

# Redis URL (will be auto-generated by Cloud Memorystore)
REDIS_URL=redis://REDIS_HOST:6379

# Service URLs (will be auto-generated by Cloud Run)
API_GATEWAY_URL=https://propflow-api-gateway-xxx.a.run.app
AUTH_SERVICE_URL=https://propflow-auth-service-xxx.a.run.app
PROPERTY_SERVICE_URL=https://propflow-property-service-xxx.a.run.app
TENANT_SERVICE_URL=https://propflow-tenant-service-xxx.a.run.app
PAYMENT_SERVICE_URL=https://propflow-payment-service-xxx.a.run.app
NOTIFICATION_SERVICE_URL=https://propflow-notification-service-xxx.a.run.app
MAINTENANCE_SERVICE_URL=https://propflow-maintenance-service-xxx.a.run.app
BOOKING_SERVICE_URL=https://propflow-booking-service-xxx.a.run.app
AI_SERVICE_URL=https://propflow-ai-services-xxx.a.run.app
FRONTEND_URL=https://propflow-frontend-xxx.a.run.app

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ALLOWED_ORIGINS=https://your-domain.com,https://propflow-frontend-xxx.a.run.app

# Google OAuth (for social login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal (alternative payment method)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
LLM_PROVIDER=openai

# Email & SMS Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key

# File Storage
STORAGE_BUCKET=your-project-id-propflow-storage
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Google Maps (for property location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Elasticsearch (for property search)
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com:9200

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-your-analytics-id

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_NOTIFICATIONS=true
ENABLE_MAINTENANCE_MODULE=true

# Performance & Scaling
MAX_FILE_SIZE=10mb
UPLOAD_TIMEOUT=30000
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debugging (set to false in production)
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_CORS=true